<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron"
                android:background="@drawable/ic_rectangle_5256"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/txt_member_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/tajawal_bold"
                android:text="@string/profile"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/my_account_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_rectangle_5691">
                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/points"
                        android:fontFamily="@font/tajawal_black"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:id="@+id/txt_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/tajawal_medium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/my_account_card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_rectangle_5691">
                    <TextView
                        android:id="@+id/values"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/value"
                        android:fontFamily="@font/tajawal_black"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:id="@+id/txt_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/tajawal_medium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/client_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:hintEnabled="false"
            android:background="@drawable/et_contact_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/txt_sign_up"
            app:boxBackgroundMode="none">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_client_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/silver"
                android:hint="@string/client_name"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_medium"
                android:paddingStart="@dimen/_5sdp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/client_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:hintEnabled="false"
            app:boxBackgroundMode="none"
            android:background="@drawable/et_contact_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/client_name_layout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_client_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/silver"
                android:hint="@string/phone"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_medium"
                android:inputType="number"
                android:paddingStart="@dimen/_5sdp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/client_birthdate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/client_phone_layout"
            android:background="@drawable/et_contact_bg"
            app:boxBackgroundMode="none">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_client_birthdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/silver"
                android:hint="@string/birthdate"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_medium"
                android:editable="false"
                android:focusable="false"
                android:clickable="true"
                android:onClick="OpenCalender"
                android:paddingStart="@dimen/_5sdp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/client_birthdate_layout"
            app:boxBackgroundMode="none"
            android:background="@drawable/et_contact_bg">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_client_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/silver"
                android:hint="@string/email"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_medium"
                android:paddingStart="@dimen/_5sdp"
                android:editable="false"
                android:enabled="false"
                android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false"
            android:layout_below="@+id/email_layout"
            app:boxBackgroundMode="none"
            android:background="@drawable/et_contact_bg">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_client_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/silver"
                android:hint="@string/password"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:fontFamily="@font/tajawal_medium"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/national_num_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false"
            android:layout_below="@+id/password_layout"
            android:background="@drawable/et_contact_bg"
            app:boxBackgroundMode="none">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_client_national_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/silver"
                android:hint="@string/national_num"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_medium"
                android:inputType="number"
                android:paddingStart="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/new_btn"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:text="@string/edit_profile"
            android:fontFamily="@font/tajawal_black"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
