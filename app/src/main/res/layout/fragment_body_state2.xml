<layout>
    <data>
        <variable
            name="memberbodystatsdetailsviewmodel"
            type="com.alatheer.noamany.BodyStatsDetailsViewModel" />
    </data>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron"
                android:background="@drawable/ic_rectangle_5256"
                android:padding="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/tajawal_bold"
                android:text="@string/body_stats"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/body_stats_red"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkwhite"
                android:fontFamily="@font/tajawal_black"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:textSize="@dimen/_16ssp"
                android:text="2020/7/21"
                android:layout_gravity="center_horizontal"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/body_stats_silver">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_serial_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/serial_number"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/serial_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11220"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="male"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/old"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/length"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.75 متر"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_water_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wateramount"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/water_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30.9 لتر"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/protein"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30.9 لتر"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_minerals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/minerals"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/minerals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.7 كجم"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/txt_fats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fats"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/fats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.7 كجم"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp">
                        <TextView
                            android:id="@+id/txt_weights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/weights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80 كجم"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</layout>
