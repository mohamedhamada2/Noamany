<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/body_stats_silver">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_margin="@dimen/_5sdp">
        <TextView
            android:id="@+id/txt_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اشتراك 3 شهور"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trainer"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:text="احمد السقا"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/body_stats_red">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp">
        <TextView
            android:id="@+id/txt_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reason"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/tajawal_medium"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/tajawal_medium"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text=" نمكطمك احمد السننمممممم مممممممممممممم مممممممممممم ممممممممم"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_above="@+id/linear_end_date"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp">
            <TextView
                android:id="@+id/txt_stopped_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/stopped_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="11/8/2020"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp">
            <TextView
                android:id="@+id/txt_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="11/8/2020"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>