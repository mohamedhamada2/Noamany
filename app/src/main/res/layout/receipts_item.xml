<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_4sdp"
    android:backgroundTint="@color/white"
    app:cardElevation="@dimen/_2sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="@dimen/_12ssp"
            android:text="اشتراك المؤسسات الشهرية"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_name"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/txt_subscription_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_bold"
                android:text=""/>
            <TextView
                android:id="@+id/subscription_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/txt_subscription_price"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorgreen"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_bold"
                android:text="جاري"
                android:layout_marginStart="@dimen/_5sdp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear4"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/txt_subscription_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_bold"
                android:text=""/>
            <TextView
                android:id="@+id/subscription_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/txt_subscription_price"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorgreen"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_bold"
                android:text="جاري"
                android:layout_marginStart="@dimen/_5sdp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear7"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/txt_inbody_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_bold"
                android:text=""/>
            <TextView
                android:id="@+id/inbody_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/txt_inbody_count"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorgreen"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_bold"
                android:text="جاري"
                android:layout_marginStart="@dimen/_5sdp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>