<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="signupviewmodel"
            type="com.alatheer.noamany.SignupViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron"
                android:background="@drawable/ic_rectangle_5256"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:onClick="Back"/>
            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/txt_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_img"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18ssp"
                android:text="@string/newsignup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/tajawal_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_below="@+id/txt_sign_up">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/client_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    app:hintEnabled="false"
                    android:background="@drawable/et_contact_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/txt_sign_up"
                    app:boxBackgroundMode="none">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_client_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColorHint="@color/silver"
                        android:hint="@string/client_name"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_14ssp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:paddingStart="@dimen/_5sdp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/client_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="none"
                    android:background="@drawable/et_contact_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/client_name_layout"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_client_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColorHint="@color/silver"
                        android:hint="@string/phone"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_14ssp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:inputType="number"
                        android:paddingStart="@dimen/_5sdp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/client_birthdate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/client_phone_layout"
                    android:background="@drawable/et_contact_bg"
                    app:boxBackgroundMode="none">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_client_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColorHint="@color/silver"
                        android:hint="@string/birthdate"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_14ssp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="true"
                        android:onClick="OpenCalender"
                        android:paddingStart="@dimen/_5sdp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/client_birthdate_layout"
                    app:boxBackgroundMode="none"
                    android:background="@drawable/et_contact_bg">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_client_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColorHint="@color/silver"
                        android:hint="@string/email"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_14ssp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:paddingStart="@dimen/_5sdp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_below="@+id/email_layout"
                    app:boxBackgroundMode="none"
                    android:background="@drawable/et_contact_bg">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_client_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColorHint="@color/silver"
                        android:hint="@string/password"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_14ssp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:fontFamily="@font/tajawal_medium"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/national_num_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_below="@+id/password_layout"
                    android:background="@drawable/et_contact_bg"
                    app:boxBackgroundMode="none">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_client_national_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColorHint="@color/silver"
                        android:hint="@string/national_num"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_14ssp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:inputType="number"
                        android:paddingStart="@dimen/_5sdp" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/new_btn"
                    android:text="@string/sign_up"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/national_num_layout"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/tajawal_black"
                    android:onClick="AddMember"
                    android:gravity="center"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</layout>

