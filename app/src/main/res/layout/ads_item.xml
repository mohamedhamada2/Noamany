<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_3sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp">
            <ImageView
                android:id="@+id/ads_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/card_img"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">
            <TextView
                android:id="@+id/ads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/red"
                android:text="kljkjhjghglllllllllllllllllllllllllllllllllllllllmmmmmmmmmm"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/ads_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/lightblack"
                android:text="mmmmmmmmm"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_img"
            android:layout_below="@+id/linear4"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="4">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/youtube_img"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/youtube2"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/facebook_img"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/facebook2" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/instagram_img"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/instagram2" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tiktok_img"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/tiktok"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
