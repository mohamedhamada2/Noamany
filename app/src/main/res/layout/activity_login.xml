<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loginviewmodel"
            type="com.alatheer.noamany.LoginViewModel" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Activities.LoginActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:onClick="Back"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/ic_rectangle_5256"/>
            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/back_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/logo1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_img"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18ssp"
                android:text="@string/login_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/tajawal_bold"/>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_5"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_login"
                android:hint="@string/email"
                android:lineSpacingExtra="0sp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:textColorHint="#ADA4A5"
                android:textSize="@dimen/_14ssp"
                android:drawableLeft="@drawable/ic_message"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_medium"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_5"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/et_email"
                android:hint="@string/password"
                android:lineSpacingExtra="0sp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:textColorHint="#ADA4A5"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/tajawal_medium"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="@dimen/_10sdp"/>
            <LinearLayout
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/new_btn"
                android:gravity="center"
                android:onClick="LoginMember">
                <TextView
                    android:id="@+id/txt_login2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_password"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#ffffff"
                    android:text="Login"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_login"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/tajawal_black"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>
